{
	"name": "kent-socialising-bot",
	"version": "1.0.0",
	"main": "dist/index.js",
	"author": "@sapphire",
	"license": "UNLICENSE",
	"type": "module",
	"imports": {
		"#root/*": [
			"./dist/*.js"
		],
		"#lib/*": [
			"./dist/lib/*.js"
		]
	},
	"dependencies": {
		"@sapphire/decorators": "^6.0.1",
		"@sapphire/discord.js-utilities": "7.0.0",
		"@sapphire/eslint-plugin-result": "^1.0.3",
		"@sapphire/framework": "^4.4.4",
		"@sapphire/plugin-logger": "^3.0.4",
		"@sapphire/utilities": "^3.12.0",
		"@skyra/env-utilities": "^1.2.1",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"colorette": "^2.0.20",
		"discord.js": "^14.11.0",
		"lint-staged": "^13.2.2",
		"pretty-quick": "^3.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@sapphire/cli": "^1.6.1",
		"@sapphire/eslint-config": "^4.4.2",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^4.0.0",
		"@types/eslint": "^8.40.0",
		"@types/node": "^18.16.18",
		"@types/ws": "^8.5.5",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"prettier": "^2.8.8",
		"tsc-watch": "^6.0.4",
		"typescript": "^5.0.4"
	},
	"scripts": {
		"sapphire": "sapphire",
		"generate": "sapphire generate",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"start": "node dist/index.js",
		"dev": "npm run build && npm run start",
		"watch:start": "tsc-watch -b src --onSuccess \"npm run start\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint src --ext ts --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.6.1"
}
